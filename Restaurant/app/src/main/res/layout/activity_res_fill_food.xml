<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Restaurant.FillFood">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edtName"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/edtName"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:text="ชื่อเมนู"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:hint="เมนูของคุณ"
                android:inputType="textPersonName"
                android:textColorHighlight="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edtDetail"
                android:layout_alignStart="@+id/edtDetail"
                android:layout_below="@+id/edtName"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:text="รายละเอียด"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edtDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/edtName"
                android:layout_alignLeft="@+id/edtName"
                android:layout_alignRight="@+id/edtName"
                android:layout_alignStart="@+id/edtName"
                android:layout_below="@+id/textView4"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:hint="รายละเอียดอาหารของคุณ"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edtStamp"
                android:layout_alignStart="@+id/edtStamp"
                android:layout_below="@+id/edtStamp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:text="ราคา"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/edtStamp"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignRight="@+id/edtStamp"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:hint="ราคาของคุณ"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edtDetail"
                android:layout_alignStart="@+id/edtDetail"
                android:layout_below="@+id/edtDetail"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:text="แต้ม"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edtStamp"
                android:layout_width="372dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/edtName"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignRight="@+id/edtName"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/textView5"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:hint="แต้มสะสมของคุณ"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edtPrice"
                android:layout_alignStart="@+id/edtPrice"
                android:layout_below="@+id/edtPrice"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:text="รูปภาพ"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:layout_alignLeft="@+id/edtPrice"
                android:layout_alignStart="@+id/edtPrice"
                android:layout_below="@+id/edtPrice"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_profile_black_24dp1"
                android:background="#F0F3F6" />

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/imageView2"
                android:orientation="vertical" >

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/edtPrice"
                    android:layout_alignStart="@+id/edtPrice"
                    android:layout_below="@+id/edtPrice"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    app:srcCompat="@android:drawable/ic_input_add" />

            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignLeft="@+id/floatingActionButton"
                android:layout_alignStart="@+id/floatingActionButton"
                android:layout_below="@+id/floatingActionButton"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_black"
                android:textColor="@android:color/white"
                android:text="บันทึก"
                android:background="@drawable/border" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>