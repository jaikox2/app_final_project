<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:theme="@style/AppTheme2"
    tools:context=".Restaurant.profile">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/Swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rellay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:paddingBottom="20dp">

                    <RelativeLayout
                        android:id="@+id/imgUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle_border">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_res"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="9dp"
                            android:background="@drawable/circle"
                            android:padding="3dp"
                            android:src="@android:drawable/sym_def_app_icon"
                            app:civ_border_color="@color/circleBorder"
                            app:civ_border_width="2dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/res_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgUser"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10sp"
                        android:fontFamily="sans-serif-light"
                        android:text="ชื่อผู้รับอาหาร"
                        android:textColor="@color/colorAccent1"
                        android:textSize="24sp" />


                    <TextView
                        android:id="@+id/res_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/res_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif"
                        android:text="ไม่มีรายละเอียดที่อยู่"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent1"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/res_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/res_address"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif"
                        android:text="เบอร์ติดต่อ"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent1"
                        android:textSize="18sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rellay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:paddingBottom="20dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />

                    <RelativeLayout
                        android:id="@+id/imgUser2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle_border">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_deli"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="9dp"
                            android:background="@drawable/circle"
                            android:padding="3dp"
                            android:src="@android:drawable/sym_def_app_icon"
                            app:civ_border_color="@color/circleBorder"
                            app:civ_border_width="2dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/deli_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgUser2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="15sp"
                        android:fontFamily="sans-serif-light"
                        android:text="ชื่อผู้รับอาหาร"
                        android:textColor="@color/colorAccent1"
                        android:textSize="24sp" />


                    <TextView
                        android:id="@+id/deli_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/deli_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif"
                        android:text="ไม่มีรายละเอียดที่อยู่"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent1"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/deli_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/deli_address"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif"
                        android:text="เบอร์ติดต่อ"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent1"
                        android:textSize="18sp" />

                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>