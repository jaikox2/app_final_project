<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.FoodDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="#F0F3F6" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edtName"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/edtName"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:text="ชื่อเมนู"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:hint="เมนูของคุณ"
                android:inputType="textPersonName"
                android:textColorHighlight="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edtDetail"
                android:layout_alignStart="@+id/edtDetail"
                android:layout_below="@+id/edtName"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:text="รายละเอียด"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/edtDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/edtName"
                android:layout_alignLeft="@+id/edtName"
                android:layout_alignRight="@+id/edtName"
                android:layout_alignStart="@+id/edtName"
                android:layout_below="@+id/textView4"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:hint="รายละเอียดอาหารของคุณ"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edtStamp"
                android:layout_alignStart="@+id/edtStamp"
                android:layout_below="@+id/edtStamp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:text="ราคา"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/edtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/edtStamp"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignRight="@+id/edtStamp"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:hint="ราคาของคุณ"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edtDetail"
                android:layout_alignStart="@+id/edtDetail"
                android:layout_below="@+id/edtDetail"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:text="แต้ม"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/edtStamp"
                android:layout_width="372dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:paddingBottom="20dp"
                android:ems="10"
                android:hint="แต้มสะสมของคุณ"
                android:inputType="number" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>